# Production Environment Variables
NODE_ENV=production

# Server Configuration
PORT=3001

# Database
DB_PATH=./server/data/workforce.db

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secure-production-jwt-key-change-this-immediately

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./server/uploads

# Frontend URL (update with your actual domain)
FRONTEND_URL=https://your-domain.com

# CORS Origins (update with your actual domains)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Service (if using external AI)
AI_SERVICE_URL=
AI_SERVICE_API_KEY=

# Database Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL/HTTPS (if using)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=